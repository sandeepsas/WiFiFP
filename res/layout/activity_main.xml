<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
        <Button
	        android:id="@+id/btscan"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:text="SHOW" />
        <Button
	        android:id="@+id/btinsert"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/btscan"
	        android:text="+" />
        <Button
	        android:id="@+id/btdrop"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/btclear"
	        android:text="DROP" />
        <Button
	        android:id="@+id/btrawscan"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/btdrop"
	        android:text="W" />
        
         <Button
	        android:id="@+id/btfetch"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/btinsert"
	        android:text="GET" />
        

    <Button
        android:id="@+id/btclear"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btfetch"
        android:text="CLR" />

    <TextView
        android:id="@+id/no_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btscan"
        android:layout_marginTop="19dp"
        android:text="Dispays no of WiFi Hostspots Detected" />
    <EditText
        android:id="@+id/uid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_id"
        android:layout_marginTop="19dp"
        android:text="ID" />




    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/uid"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TextView
		        android:id="@+id/address1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:enabled="true"
		        android:text="WiFi Hotspots"
		        android:textSize="10dp" />
            
        </LinearLayout>
    </ScrollView>






</RelativeLayout>